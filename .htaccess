<IfModule mod_rewrite.c>
  Options -Indexes
  RewriteEngine On

  # Якщо існує реальний файл/каталог у корені — віддаємо
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Інакше — все ллємо у public/index.php
  RewriteRule ^ public/index.php [L]
</IfModule>
